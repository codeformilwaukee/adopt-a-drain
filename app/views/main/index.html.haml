.container-fluid{:class => (signed_in? ? "signed-in" : nil)}
  .row
    .sidebar
      .navbar.navbar-default
        %a{href: root_url}
          = image_tag "logos/adopt-a-drain.png", :alt => t("titles.main", :thing => t("defaults.thing").titleize), :title => t("titles.main", :thing => t("defaults.thing").titleize)
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .sidebar-content
        -# Corresponds to guideline div below
        %div.hidden-xs
          %h3.text-center
            = t("titles.adopted_tagline", :count => Thing.adopted.count, :things => t("defaults.things"))
          %h3.text-center
            = t("titles.debris_tagline", :count => Thing.adopted.sum(:debris_removed_pounds), :pounds => t("defaults.pounds"))
            .small
              Last updated
              = local_date(Time.now, '%B %e, %Y')
          %a.details{:href => "#details", :"data-toggle" => "modal", :"data-target" => "#details"}
            %button.btn.btn-block.btn-primary#tagline
              = t("defaults.tagline")
        #content
          = render :partial => "layouts/flash", :locals => {:flash => flash}
          - if signed_in?
            = render :partial => "sidebar/search"
          - elsif @reset_password_token.present?
            = render :partial => 'passwords/edit'
          - else
            %iframe{ :width => "100%", :src => "https://www.youtube.com/embed/MlRuuBSr5AA", :height => "250px", :frameborder => "0", :allow => "accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture", :allowfullscreen => true }
            = render :partial => "sidebar/search"
        -# Corresponds to guideline div above
        %div.hidden.visible-xs-block
          %a.details{:href => "#details", :"data-toggle" => "modal", :"data-target" => "#details"}
            %button.btn.btn-block.btn-primary#tagline
              = t("defaults.tagline")
        #logos
          .row
            .col-xs-4
              %a{:href => "https://www.swwtwater.org/"}
                = image_tag "logos/swwt.jpg", :alt => t("sponsors.swwt"), :title => t("sponsors.swwt"), :class => "swwt"
            .col-xs-4
              %a{:href => "https://www.mmsd.com/"}
                = image_tag "logos/mmsd.png", :alt => t("sponsors.mmsd"), :title => t("sponsors.mmsd"), :class => "mmsd"
            .col-xs-4
              %a{:href => ""}
                = image_tag "logos/community_partners.png", :alt => t("sponsors.partners"), :title => t("sponsors.partners"), :class => "partners"
          .row
            .col-xs-4
              %a{:href => "https://codeformilwaukee.org/"}
                = image_tag "logos/cfm.png", :alt => t("sponsors.built"), :title => t("sponsors.built"), :class => "cfm"
            .col-xs-4
            .col-xs-4
    .col-md-9.map-container
      #map
        &nbsp;
      #legend
        .title
          Legend
        .show-hide
          %a#toggleLegend{:href=>"#"}
            Hide
  = render :partial => "sidebar/tos", layout: "layouts/modal", locals: {id: "tos", title: "Volunteer Waiver & Release Of Liability"}
  = render :partial => "sidebar/details", layout: "layouts/modal", locals: {id: "details", title: "What Does it Mean To Adopt a Drain?"}
:javascript
  $(function() {
    $('.navbar-toggle').on('click', function(){
      $('div.sidebar').toggleClass('sidebar-full');
    });
  });
